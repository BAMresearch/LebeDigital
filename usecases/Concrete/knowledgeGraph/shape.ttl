@prefix tt: <http://w3id.org/concrete/youngs> .

# this shape tests that the diameter of the specimen has a decimal value and a unit of that value

schema:SpecimenDiameter
    a sh:NodeShape ;
    sh:targetNode tt:SpecimenDiameter ;
    sh:property [
        sh:path cco:has_decimal:value ;
        sh:datatype xsd:decimal ;
    ] ;
    sh:property [
        sh:path cco:uses_measurement_unit ;
        sh:class cco:MeasurementUnitOfLength ;
    ] .

# this shape tests that the Specimen is the input of the YoungsModulusTest

schema:Specimen
    a sh:NodeShape ;
    sh:targetNode  tt:Specimen ;
    sh:property [
        sh:path cco:is_input_of ;
        sh:node tt:YoungsModulusTest
    ] .

# this shape tests that the specimen has a shape attached to it

schema:SpecimenShape
    a sh:NodeShape ;
    sh:targetClass mseo:MeasurementRegion ;
    sh:property [
        sh:path obo:RO_0000086 ;
        sh:node tt:SpecimenShape
    ] .

# this shape tests that the specimen has a name attached to it

schema:SpecimenName
    a sh:NodeShape ;
    sh:targetNode tt:Specimen ;
    sh:property [
        sh:path cco:designated_by ;
        sh:node tt:SpecimenName ;
    ] .
